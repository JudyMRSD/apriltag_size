cmake_minimum_required(VERSION 2.8.3)
project(urdf_tutorial)

find_package(catkin REQUIRED roslaunch)
catkin_package()

roslaunch_add_file_check(launch)

install(DIRECTORY config images launch rviz urdf
  DESTINATION ${CATKIN_PACKAGE_SHARE_DESTINATION})


#tf
add_executable(apriltag_kinect_tf src/apriltag_kinect_tf.cpp)
target_link_libraries(apriltag_kinect_tf ${catkin_LIBRARIES}
                                ${Eigen_LIBRARIES}
                                ${OpenCV_LIBRARIES}
                                ${Yaml_LIBRARIES}    
                                ${apriltagscpp_LIBRARY})
add_dependencies(apriltag_kinect_tf ${PROJECT_NAME}_gencp)
